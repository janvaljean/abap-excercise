CALL FUNCTION 'REUSE_ALV_GRID_DISPLAY'
  EXPORTING
    i_callback_program       = sy-repid
    i_callback_user_command  = 'EKPO_DETAILS'
    i_callback_pf_status_set = 'CUST_MENU' ðŸ“’ðŸ“’ðŸ“’menuðŸ“’se41 menu create custom
    is_layout = wa_layout  --chekbox ðŸ“Œ ðŸ“Œ ðŸ“Œ ðŸ“Œ 
