SELECT carrid,
       'test' && carrid as test_field,
       connid,
       seatsmax,
       seatsmax - seatsocc as seats_remain,
       seatsocc
       FROM sflight
       WHERE carrid = @carrid
       INTO TABLE @DATA(it_sflight).



